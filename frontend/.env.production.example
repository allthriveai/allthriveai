# =============================================================================
# AllThrive AI Frontend - Production Environment Variables
# =============================================================================
# Copy this file to .env.production and fill in your values
# These are PUBLIC - they will be embedded in the built frontend
# =============================================================================

# Backend API URL
VITE_API_URL=https://api.allthrive.ai

# WebSocket URL (for real-time features)
# Uses ws.allthrive.ai subdomain for direct ALB access (bypasses CloudFront)
# This provides lower latency for WebSocket connections
VITE_WS_URL=wss://ws.allthrive.ai

# Application URL (for SEO, canonical URLs, and meta tags)
VITE_APP_URL=https://allthrive.ai

# Stripe Publishable Key (use pk_live_ for production)
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_

# reCAPTCHA v3 Site Key
VITE_RECAPTCHA_SITE_KEY=

# Sentry Error Tracking
VITE_SENTRY_DSN=
VITE_SENTRY_ENVIRONMENT=production
VITE_APP_VERSION=1.0.0

# Sentry sample rates (adjust for production traffic)
# Lower values = less data collected = lower costs
VITE_SENTRY_TRACES_SAMPLE_RATE=0.05
VITE_SENTRY_REPLAYS_SESSION_SAMPLE_RATE=0.01
VITE_SENTRY_REPLAYS_ERROR_SAMPLE_RATE=1.0

# PostHog Analytics (Product Analytics & Session Replay)
VITE_POSTHOG_KEY=
VITE_POSTHOG_HOST=https://app.posthog.com
