# Django settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (PostgreSQL example - SQLite is default)
# DATABASE_URL=postgresql://user:password@localhost:5432/allthrive_ai

# Cookie Domain (for sharing cookies between frontend and backend)
# Development: localhost
# Production: .yourdomain.com (note the leading dot for subdomains)
COOKIE_DOMAIN=localhost

# Frontend URL (for OAuth redirects)
# Development: http://localhost:3000
# Production: https://app.yourdomain.com
FRONTEND_URL=http://localhost:3000
# Backend URL (for redirects and callbacks)
BACKEND_URL=http://localhost:8000

# Site URL (for SEO, sitemap, and meta tags)
# Development: http://localhost:3000
# Production: https://allthrive.ai
SITE_URL=http://localhost:3000

# CORS settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# AI API Keys
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
GOOGLE_API_KEY=your-google-api-key-here

# AI Gateway (Optional)
# Set OPENAI_BASE_URL to use an OpenAI-compatible gateway like OpenRouter
# Leave empty to use the official OpenAI API directly
# Example: https://openrouter.ai/api/v1
OPENAI_BASE_URL=

# Stripe Payment Configuration
# Get your API keys from: https://dashboard.stripe.com/test/apikeys
# Test keys start with pk_test_ and sk_test_
STRIPE_PUBLIC_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Frontend (Vite requires VITE_ prefix)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# reCAPTCHA v3 Configuration (for bot protection on invitation form)
# Get your keys from: https://www.google.com/recaptcha/admin
# Use reCAPTCHA v3 type for invisible protection
RECAPTCHA_SECRET_KEY=

# Gemini (Google AI) Configuration
# Models default to latest if not specified
# GEMINI_MODEL_NAME=gemini-3-pro-preview
# GEMINI_IMAGE_MODEL=gemini-3-pro-image-preview

# Azure OpenAI Configuration (Optional)
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-small

# Embedding fallback: If Azure deployment fails, fall back to direct OpenAI
# Requires OPENAI_API_KEY to be set for fallback to work
EMBEDDING_FALLBACK_TO_OPENAI=false

# Fallback AI Provider (used when DEFAULT_AI_PROVIDER is not set)
FALLBACK_AI_PROVIDER=azure

# Default AI Provider (options: azure, openai, anthropic)
# For local development you can set this to openai by default
DEFAULT_AI_PROVIDER=openai

# LangSmith Configuration (AI Gateway Observability)
# Sign up at https://smith.langchain.com
# Create a project and get your API key from Settings > API Keys
LANGSMITH_API_KEY=lsv2_pt_your_api_key_here
LANGSMITH_PROJECT=allthrive-ai-gateway
LANGSMITH_ENDPOINT=https://api.smith.langchain.com
LANGSMITH_TRACING_ENABLED=true

# AI Gateway Cost Tracking
AI_COST_TRACKING_ENABLED=true
AI_MONTHLY_SPEND_LIMIT_USD=1000.0
AI_USER_DAILY_SPEND_LIMIT_USD=5.0

# Celery & Redis
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Redis (for caching and chat sessions)
# Development: redis://localhost:6379
# Production: redis://your-redis-host:6379
REDIS_URL=redis://localhost:6379

# Email Configuration
# Production uses AWS SES (configured automatically via IAM role)
# For development, emails are printed to console
DEFAULT_FROM_EMAIL=noreply@allthrive.ai
ADMIN_EMAIL=support@allthrive.ai

# Invitation admin notification emails (comma-separated for multiple recipients)
INVITATION_ADMIN_EMAILS=allie@allthrive.ai

# OAuth Provider Configuration
# Get your Google OAuth credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Get your GitHub OAuth credentials from: https://github.com/settings/developers
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# GitHub API Token (optional - for fetching repo metadata)
# Get yours from: https://github.com/settings/tokens (needs 'public_repo' scope)
# Without token: 60 requests/hour, With token: 5000 requests/hour
GITHUB_API_TOKEN=your-github-personal-access-token

# Social OAuth Provider Credentials (for account linking)
# These allow users to connect their social accounts from settings

# GitHub OAuth (for linking GitHub accounts)
GITHUB_OAUTH_CLIENT_ID=your-github-oauth-client-id
GITHUB_OAUTH_CLIENT_SECRET=your-github-oauth-client-secret

# GitLab OAuth
# Get credentials from: https://gitlab.com/oauth/applications
GITLAB_OAUTH_CLIENT_ID=your-gitlab-client-id
GITLAB_OAUTH_CLIENT_SECRET=your-gitlab-client-secret

# LinkedIn OAuth
# Get credentials from: https://www.linkedin.com/developers/apps
LINKEDIN_OAUTH_CLIENT_ID=your-linkedin-client-id
LINKEDIN_OAUTH_CLIENT_SECRET=your-linkedin-client-secret

# Figma OAuth
# Get credentials from: https://www.figma.com/developers/apps
FIGMA_OAUTH_CLIENT_ID=your-figma-client-id
FIGMA_OAUTH_CLIENT_SECRET=your-figma-client-secret

# Hugging Face OAuth
# Get credentials from: https://huggingface.co/settings/connected-applications
HUGGINGFACE_OAUTH_CLIENT_ID=your-huggingface-client-id
HUGGINGFACE_OAUTH_CLIENT_SECRET=your-huggingface-client-secret

# Midjourney OAuth (coming soon - no public API yet)
MIDJOURNEY_OAUTH_CLIENT_ID=your-midjourney-client-id
MIDJOURNEY_OAUTH_CLIENT_SECRET=your-midjourney-client-secret

# Database (use this with docker-compose; defaults to SQLite if unset)
POSTGRES_DB=allthrive_ai
POSTGRES_USER=allthrive
POSTGRES_PASSWORD=allthrive
POSTGRES_HOST=db
POSTGRES_PORT=5432
DATABASE_URL=postgresql://allthrive:allthrive@db:5432/allthrive_ai

# MinIO (S3-compatible object storage)
# Internal endpoint (backend container -> minio container)
MINIO_ENDPOINT=minio:9000
# Public endpoint (browser -> minio)
MINIO_ENDPOINT_PUBLIC=localhost:9000
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false
MINIO_BUCKET_NAME=allthrive-media
